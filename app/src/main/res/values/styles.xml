        <item name="colorAccent">@color/fireAccent</item>

        <item name="android:background">@color/fireBackground</item>
        <item name="android:textColor">@color/fireTextColor</item>
        <item name="colorButtonNormal">@color/fireButtonColor</item>
        <item name="android:colorBackground">@android:color/darker_gray</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
    </style>

