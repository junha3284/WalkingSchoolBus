<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/RCA_text_my_rewards"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:text="@string/RCA_my_rewards"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RCA_text_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/RCA_instructions"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/rewardSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/RCA_button_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/RCA_preview" />

        <Button
            android:id="@+id/RCA_button_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/RCA_set" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>